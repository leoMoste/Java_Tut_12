	private static void demo1() {
				System.out.println("Demo 1:");
				/*Arbeitsauftrag 1:*/
				Comparator<Student> gpaComparator = new StudentGPACompartor();
				Arrays.sort(students, gpaComparator);
				//Arrays.sort(students, gpaComparator.reversed());
				
